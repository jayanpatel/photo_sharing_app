<% @posts.reverse.each do |post| %>
	<div>
		<div><% @user = User.find_by(id: post.user_id)%></div>
		<% if @user.id == current_user.id%>
			<div><%= link_to "@"+@user.email.split("@")[0], '/users/'+ @user.id.to_s + '/posts'%></div>
			<div><%= post.caption %></div>
			<% if post.photo.file? %>
				<%= image_tag post.photo.url(:medium)%>
			<% end %>
			<div><%= link_to 'Delete', post, :method => 'delete', data: { confirm: "Are you sure you want to delete this post? "} %> | 
			<%= link_to "Edit Post", edit_post_path(post.id.to_s) %></div>
			<p></p>
		<% else %>
			<div><%= link_to "@"+@user.email.split("@")[0], '/users/'+ @user.id.to_s + '/posts'%></div>
			<div><%= post.caption %></div>
			<% if post.photo.file? %>
				<%= image_tag post.photo.url(:medium)%>
			<% end %>
			<p></p>
		<% end %>	

	</div>
<% end %>

<div><%= link_to "New Post", new_post_path %></div>