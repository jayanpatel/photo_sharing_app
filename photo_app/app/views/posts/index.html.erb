<center class="updating-font-stuff">
<% @posts.reverse.each do |post| %>
	<div class="container">
		<% @user = User.find_by(id: post.user_id)%>
		<% if @user.id == current_user.id%>
			<div class="shadowing"><%= link_to "@"+@user.email.split("@")[0], '/users/'+ @user.id.to_s + '/posts'%>:
			<%= post.caption %></div>
			<% if post.photo.file? %>
				<%= image_tag post.photo.url(:medium), :class => 'image'%>
			<% end %>
			<div><%= link_to 'Delete', post, :method => 'delete', data: { confirm: "Are you sure you want to delete this post? "} %> | 
			<%= link_to "Edit Post", edit_post_path(post.id.to_s) %></div>
			<p></p>
			<br>
		<% else %>
			<div class="shadowing"><%= link_to "@"+@user.email.split("@")[0], '/users/'+ @user.id.to_s + '/posts'%>:
			<%= post.caption %></div>
			<% if post.photo.file? %>
				<%= image_tag post.photo.url(:medium), :class => 'image'%>
			<% end %>
			<p></p>
			<br>
		<% end %>	

	</div>
<% end %>

</center>